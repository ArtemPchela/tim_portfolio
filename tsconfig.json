{
  "compilerOptions": {
    "target": "es6",
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6",
      "es7",
      "ES2020.String"
    ],
    "allowJs": true,
    "jsx": "preserve",
    "removeComments": false,
    "skipLibCheck": true,
    "strict": true,
    /*TypeScript follows the case sensitivity rules of the file system itâ€™s running on*/
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/fonts/*": [
        "fonts/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
